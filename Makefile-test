# put your *.o targets here, make should handle the rest!

SRCS = 						\
		MVC/Model.cpp		\
		MVC/View.cpp		\
		MVC/Controller.cpp	\
		MVC/Observer.cpp	\
		MVCtest.cpp			\
		ImplemModel.cpp		\
		ImplemController.cpp\
		Vectortest.cpp		\
		Memoryleak.cpp		\
		Test.cpp			\
		main_test.cpp

OUT=./out_test/
BIN=./out_test/
DEP=./out_test/


$(shell mkdir -p $(OUT) >/dev/null)
$(shell mkdir -p $(OUT)/MVC >/dev/null)
$(shell mkdir -p $(BIN) >/dev/null)
$(shell mkdir -p $(DEP) >/dev/null)

PROJ_NAME=TEST_PROGRAM

# that's it, no need to change anything below this line!

###################################################

CC=gcc
CXX=g++ 

###################################################

vpath %.c src
vpath %.cpp src
vpath %.h inc

vpath %.cpp test/src
vpath %.h test/inc

ROOT=$(shell pwd)

CFLAGS = -Iinc -Itest/inc  
CFLAGS += -Wall -Werror -Wtype-limits -Wuninitialized -Wunused-parameter -Wunused-but-set-parameter -Wempty-body   

LIST = $(SRCS:.cpp=.o)
OBJS = $(addprefix $(OUT),$(LIST:.c=.o))
#OBJS_FULL = $(OBJS) lib/startup_stm32f4xx.s # add startup file to build


###################################################

.PHONY: proj

all: proj

proj: 	$(OUT) $(BIN)$(PROJ_NAME).exe

$(OUT):
	mkdir $(OUT)

$(BIN)$(PROJ_NAME).exe: $(OBJS)
	$(CXX) -o $(BIN)$(PROJ_NAME).exe $(OBJS)
	
$(OUT)%.o : %.cpp
	$(CXX) $(CFLAGS) -c -o $@ $< -std=c++11;
	rm -f $(DEP)/$*.d
	$(CXX) $(CFLAGS) -MM -MT $@ -MD $< -MF $(DEP)/$*.d -std=c++11;
	@echo "Compiled "$<"!"
	
$(OUT)%.o : %.c
	$(CC) $(CFLAGS) -c -o $@ $<
	rm -f $(DEP)/$*.d
	$(CXX) $(CFLAGS) -MM -MT $@ -MD $< -MF $(DEP)/$*.d;
	@echo "Compiled "$<"!"

rebuild: clean lib proj
	
clean:
	rm -f $(OBJS)
	rm -f $(BIN)$(PROJ_NAME).elf
	rm -f $(BIN)$(PROJ_NAME).hex
	rm -f $(BIN)$(PROJ_NAME).bin
	rm -f -d -r $(OUT)
	rm -f -d -r $(BIN)
	rm -f -d -r $(DEP)
	
include $(wildcard $(DEP)/*.d)